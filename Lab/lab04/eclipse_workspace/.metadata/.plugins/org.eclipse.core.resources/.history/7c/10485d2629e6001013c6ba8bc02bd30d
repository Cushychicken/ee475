#include <stdio.h>
#include <string.h>
#include "C:\NRCREE475\lab04\DE2_System\nios_qsys\software\lcd\lcdwrite.h"

#define Switches (volatile int *) 0x01001010
#define LEDs 	 (int *) 0x01001000

int main (void){

	int test;
	int prev;
	char str[] = "Switch program!\n";
	char str1[] = "SW1 is active.\n";
	char str2[] = "SW2 is active.\n";
	char str3[] = "SW3 is active.\n";
	char str4[] = "SW4 is active.\n";
	char prev1[] = "SW1 used last.\n";
	char prev2[] = "SW2 used last.\n";
	char prev3[] = "SW3 used last.\n";
	char prev4[] = "SW4 used last.\n";

	WriteLCD(str);

	while(1){
		test = *Switches;
		switch(test){
			case "1":
				WriteLCD(str1);
				if(prev != 0){
					WriteLCD()
				}
			case "2":
				WriteLCD(str2); break;
			case "4":
				WriteLCD(str3); break;
			case "8":
				WriteLCD(str4); break;
		}
		prev = test;

	};

	return(1);

}
